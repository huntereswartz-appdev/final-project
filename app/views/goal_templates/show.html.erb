<h1>
  Goal #<%= @goal.id %> details
</h1>

<a href="/goals/<%= @goal.id %>/edit">
  Edit goal
</a>

<hr>

<dl>
  <dt>
    Sales goal
  </dt>
  <dd>
    <%= number_to_currency(@goal.sales_goal, precision: 0) %>
  </dd>

  <dt>
    Period end date
  </dt>
  <dd>
    <%= @goal.period_end %>
  </dd>

  <dt>
    Average deal size
  </dt>
  <dd>
    <%= number_to_currency(@goal.average_deal_size, precision: 0) %>
  </dd>

  <dt>
    Period closed deal value
  </dt>
  <dd>
    <%= number_to_currency(@goal.period_closed_deal_value, precision: 0) %>
  </dd>

  <dt>
    Pipeline stages
  </dt>
  <dd>
    <%= @goal.pipeline_stages %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@goal.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_goal/<%= @goal.id %>">
  Delete goal
</a>

<hr>

<a href="/goals">
  Go back
</a>
